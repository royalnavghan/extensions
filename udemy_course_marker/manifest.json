{
  "manifest_version": 3,
  "name": "Udemy Business Course Marker",
  "version": "1.0",
  "description": "Premium tool to mark all videos in Udemy Business courses as watched with advanced features",
  "author": "Santhosh Kumar Reddy",
  "permissions": ["activeTab", "scripting", "storage", "tabs", "sidePanel"],
  "host_permissions": [
    "https://*.udemy.com/*",
    "https://*.udemy.com/organization/*/home/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    },
    "default_title": "Open Udemy Course Marker"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
} 